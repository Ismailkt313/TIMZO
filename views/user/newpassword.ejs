<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - TIMZO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/images/TIMZO.jpg">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: 'Arial', sans-serif;
            margin: 0;
        }

        .container-fluid {
            padding: 0;
        }

        .main-content {
            padding: 20px;
            min-height: 100vh;
            background-color: #ffffff;
        }

        .password-card {
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            margin: auto;
        }

        .password-card h1 {
            font-size: 24px;
            color: #1a1a1a;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 6px;
            padding: 10px;
            font-size: 14px;
        }

        .btn-custom {
            background-color: #1a1a1a;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #ffd700;
            color: #1a1a1a;
        }

        .forgot-password {
            text-align: center;
            margin-top: 10px;
        }

        .forgot-password a {
            color: #1a1a1a;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            color: #ffd700;
        }

        #verify-password-form,
        #change-password-form {
            transition: opacity 0.3s ease;
        }

        .hidden {
            display: none;
        }
        .row{
            padding-left: 480px;
        }

        @media (max-width: 767px) {
            .main-content {
                padding: 15px;
            }

            .password-card {
                padding: 20px;
            }

            .password-card h1 {
                font-size: 20px;
            }

            .btn-custom {
                padding: 8px 16px;
                font-size: 14px;
            }
        }
    </style>
</head>

<body>
     <%- include('.././Partials/user/userSidebar', { user: user, currentPage: 'changepassword' }) %>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <div class="col-md-9 d-flex align-items-center justify-content-center">
                <div class="password-card text-center">
                    <h1>Change Password</h1>

                    <form id="verify-password-form" class="mb-3">
                        <div class="form-group">
                            <label for="oldPassword" class="form-label">Old Password</label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" >
                        </div>
                        <button type="submit" class="btn-custom">Verify Password</button>
                        <div class="forgot-password">
                            <a href="/user/forgotpassword">Forgot Password?</a>
                        </div>
                    </form>

                    <form id="change-password-form" class="hidden">
                        <div class="form-group">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" minlength="6" >
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6" >
                        </div>
                        <button type="submit" class="btn-custom">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('verify-password-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = { oldPassword: formData.get('oldPassword') };
            console.log('Verifying old password:', data);

            try {
                const response = await fetch('/user/verify-old-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data),
                    credentials: 'include'
                });

                const result = await response.json();
                if (result.success) {
                    Swal.fire({
                        title: 'Success',
                        text: 'Old password verified. Please enter your new password.',
                        icon: 'success',
                        timer: 1500,
                        showConfirmButton: false
                    });
                    document.getElementById('verify-password-form').classList.add('hidden');
                    document.getElementById('change-password-form').classList.remove('hidden');
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: result.message || 'Incorrect old password',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                console.error('Error verifying password:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred while verifying password. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });

        document.getElementById('change-password-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = {
                newPassword: formData.get('newPassword'),
                confirmPassword: formData.get('confirmPassword')
            };
            console.log('Changing password:', data);

            if (data.newPassword !== data.confirmPassword) {
                Swal.fire({
                    title: 'Error',
                    text: 'New password and confirm password do not match',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                return;
            }

            try {
                const response = await fetch('/user/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ newPassword: data.newPassword }),
                    credentials: 'include'
                });

                const result = await response.json();
                if (result.success) {
                    Swal.fire({
                        title: 'Success',
                        text: 'Password changed successfully. Please log in again.',
                        icon: 'success',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    setTimeout(() => {
                        window.location.href = '/user/login';
                    }, 2000);
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: result.message || 'Failed to change password',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                console.error('Error changing password:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred while changing password. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
</body>

</html>