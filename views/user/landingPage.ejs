                        <div class="feature-icon">
                            <i class="fas fa-exchange-alt"></i>
                        </div>
                        <h5>EASY RETURNS</h5>
                        <p>30-day money back guarantee</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h5>24/7 SUPPORT</h5>
                        <p>Dedicated customer service</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
