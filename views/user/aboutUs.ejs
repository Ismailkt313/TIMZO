    <style>
      body {
        margin: 0;
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #f4f4f4, #e0e0e0);
        overflow-x: hidden;
      }
      .container-fluid {
        padding: 0;
      }
      .main-content {
        padding: 40px 20px;
        background: #ffffff;
        min-height: 100vh;
        overflow-y: auto;
      }
      .about-container {
        max-width: 1200px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
      }
      .about-container h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1a1a1a;
        text-align: center;
        margin-bottom: 30px;
        letter-spacing: 1px;
      }
      .section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 25px;
        transition: transform 0.2s ease;
      }
      .section:hover {
        transform: translateY(-5px);
      }
      .section h2 {
        font-size: 22px;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
      }
      .section p {
        color: #666;
        font-size: 16px;
        line-height: 1.6;
      }
      .team-card {
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        text-align: center;
        transition: transform 0.3s ease;
      }
      .team-card:hover {
        transform: scale(1.05);
      }
      .team-card img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        border: 3px solid #ffd700;
      }
      .team-card h3 {
        font-size: 18px;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 5px;
      }
      .team-card p {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
      }
      .team-card .social-links a {
        color: #1a1a1a;
        font-size: 18px;
        margin: 0 8px;
        transition: color 0.3s ease;
      }
      .team-card .social-links a:hover {
        color: #ffd700;
      }
      .btn-custom {
        background: #1a1a1a;
        color: #ffffff;
        padding: 12px 30px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 500;
        border: none;
        transition: all 0.3s ease;
        display: inline-block;
      }
      .btn-custom:hover {
        background: #ffd700;
        color: #1a1a1a;
        transform: scale(1.05);
      }
      @media (max-width: 767.98px) {
        .about-container {
          padding: 15px;
        }
        .about-container h1 {
          font-size: 24px;
        }
        .section h2 {
          font-size: 20px;
        }
        .section p {
          font-size: 14px;
        }
        .team-card img {
          width: 100px;
          height: 100px;
        }
        .team-card h3 {
          font-size: 16px;
        }
        .btn-custom {
          padding: 10px 20px;
          font-size: 14px;
        }
      }
    </style>
