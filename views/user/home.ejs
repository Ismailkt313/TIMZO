                                        <% for(let i=product.rating; i < 5; i++) { %>
                                            <i class="far fa-star"></i>
                                            <% } %>
                            </div>
                            <p class="product-price">$<%= product.price.toFixed(2) %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </section>

