<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - Timzo Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/images/TIMZO.jpg">
    <style>
        .section-divider {
            border-top: 1px solid #e5e7eb;
            margin: 1.5rem 0;
        }

        .table-container {
            overflow-x: auto;
        }

        .table-container::-webkit-scrollbar {
            height: 8px;
        }

        .table-container::-webkit-scrollbar-thumb {
            background-color: #6b7280;
            border-radius: 4px;
        }

        .table-container::-webkit-scrollbar-track {
            background-color: #e5e7eb;
        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Navbar -->
    <nav
        class="bg-gray-800 px-6 py-4 text-white flex justify-between items-center shadow-md fixed top-0 left-0 right-0 z-10">
        <div class="text-xl font-bold tracking-wide">Timzo Admin</div>
        <ul class="flex gap-6 text-sm">
            <li><a href="/admin/dashboard" class="hover:text-gray-300 transition duration-200">Dashboard</a></li>
            <li><a href="/admin/users" class="hover:text-gray-300 transition duration-200">Users</a></li>
            <li><a href="/admin/products" class="hover:text-gray-300 transition duration-200">Products</a></li>
            <li><a href="/admin/orders" class="hover:text-gray-300 transition duration-200">Orders</a></li>
            <li><a href="/admin/logout" class="text-red-400 hover:text-red-300 transition duration-200">Logout</a></li>
        </ul>
    </nav>

    <div class="flex">
        <!-- Sidebar -->
        <div class="h-screen w-64 bg-gray-800 text-white fixed top-0 left-0 shadow-lg flex flex-col">
            <div class="p-6 text-2xl font-bold border-b border-gray-700">
                Timzo Admin
            </div>
            <nav class="flex-1 p-4 space-y-4">
                <a href="/admin/dashboard"
                    class="block px-4 py-2 rounded transition <%= activePage === 'dashboard' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Dashboard
                </a>
                <a href="/admin/users"
                    class="block px-4 py-2 rounded transition <%= activePage === 'users' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Users
                </a>
                <a href="/admin/getProduct"
                    class="block px-4 py-2 rounded transition <%= activePage === 'product' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Product
                </a>
                <a href="/admin/brand"
                    class="block px-4 py-2 rounded transition <%= activePage === 'brand' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Brand
                </a>
                <a href="/admin/categories"
                    class="block px-4 py-2 rounded transition <%= activePage === 'categories' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Categories
                </a>
                <a href="/admin/orders"
                    class="block px-4 py-2 rounded transition <%= activePage === 'orders' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Orders
                </a>
                <a href="/admin/coupons"
                    class="block px-4 py-2 rounded transition <%= activePage === 'coupons' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Coupons
                </a>
                <a href="/admin/banners"
                    class="block px-4 py-2 rounded transition <%= activePage === 'banners' ? 'bg-gray-700' : 'hover:bg-gray-700' %>">
                    Banners
                </a>
                <a href="/admin/logout"
                    class="block px-4 py-2 text-red-400 hover:bg-red-500 hover:text-white rounded transition">
                    Logout
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="ml-64 mt-16 p-6 flex-1">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-800">Order Details - <%= order.orderId %></h1>
                <a href="/admin/orders"
                    class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition flex items-center gap-2">
                    <i class="fa-solid fa-arrow-left"></i> Back to Orders
                </a>
            </div>

            <% if (!order) { %>
                <div class="text-center text-gray-600">
                    <p>Order not found.</p>
                </div>
            <% } else { %>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <!-- Order Information -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Order Information</h2>
                        <p class="text-gray-600">Order ID: <%= order.orderId %></p>
                        <p class="text-gray-600">Placed on: <%= new Date(order.orderDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
                        <p class="text-gray-600">Status: 
                            <span class="<%= 
                                order.orderStatus === 'Delivered' ? 'text-green-600' :
                                order.orderStatus === 'Cancelled' ? 'text-red-600' :
                                order.orderStatus === 'Shipped' ? 'text-blue-600' :
                                'text-yellow-600' %> font-semibold">
                                <%= order.orderStatus %>
                            </span>
                        </p>
                        <p class="text-gray-600">Estimated Delivery: <%= order.estimatedDelivery ? new Date(order.estimatedDelivery).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'N/A' %></p>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Customer Information -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Customer Information</h2>
                        <p class="text-gray-600">Name: <%= order.user?.fullname || 'Unknown User' %></p>
                        <p class="text-gray-600">Email: <%= order.user?.email || 'N/A' %></p>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Shipping Address -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Shipping Address</h2>
                        <p class="text-gray-600">
                            <%= order.shippingAddress?.fullName || 'N/A' %><br>
                            <%= order.shippingAddress?.addressLine1 || '' %> <%= order.shippingAddress?.addressLine2 ? ', ' + order.shippingAddress.addressLine2 : '' %><br>
                            <%= order.shippingAddress?.city || '' %>, <%= order.shippingAddress?.state || '' %> <%= order.shippingAddress?.postalCode || '' %><br>
                            <%= order.shippingAddress?.country || '' %><br>
                            Phone: <%= order.shippingAddress?.phone || 'N/A' %>
                        </p>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Payment Details -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Payment Details</h2>
                        <p class="text-gray-600">Method: <%= order.paymentMethod || 'N/A' %></p>
                        <p class="text-gray-600">Status: <%= order.paymentStatus || 'N/A' %></p>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Ordered Items -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Ordered Items</h2>
                        <div class="table-container">
                            <table class="w-full text-gray-600 border-collapse">
                                <thead>
                                    <tr class="bg-gray-100">
                                        <th class="p-3 text-left border-b">Product</th>
                                        <th class="p-3 text-left border-b">Quantity</th>
                                        <th class="p-3 text-left border-b">Price</th>
                                        <th class="p-3 text-left border-b">Total</th>
                                        <th class="p-3 text-left border-b">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (order.items?.length) { %>
                                        <% order.items.forEach(item => { %>
                                            <tr class="border-b hover:bg-gray-50">
                                                <td class="p-3 flex items-center">
                                                    <img src="<%= item.productId?.images?.[0] || '/images/default-watch.jpg' %>"
                                                        alt="<%= item.productName || 'Product' %>"
                                                        class="w-16 h-16 object-cover rounded mr-3">
                                                    <span><%= item.productName || 'Unknown Product' %></span>
                                                </td>
                                                <td class="p-3"><%= item.quantity || 0 %></td>
                                                <td class="p-3">$<%= item.price?.toFixed(2) || '0.00' %></td>
                                                <td class="p-3">$<%= (item.quantity * (item.price || 0)).toFixed(2) %></td>
                                                <td class="p-3">
                                                    <span class="<%= 
                                                        item.status === 'Delivered' ? 'text-green-600' :
                                                        item.status === 'Cancelled' ? 'text-red-600' :
                                                        item.status === 'Returned' ? 'text-red-600' :
                                                        'text-yellow-600' %> font-semibold">
                                                        <%= item.status %>
                                                    </span>
                                                </td>
                                                <td class="p-3">
                                                    <% if (item.status === 'Returned') { %>
                                                        <p>Reason: <%= item.returnReason %></p>
                                                        <p>Date: <%= new Date(item.returnDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                                                    <% } else if (item.status === 'Cancelled') { %>
                                                        <p>Cancelled on <%= new Date(item.cancelDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="p-3 text-center">No items found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Order Summary -->
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Order Summary</h2>
                        <p class="text-gray-600">Subtotal: $<%= order.subtotal?.toFixed(2) || '0.00' %></p>
                        <% if (order.discount > 0) { %>
                            <p class="text-gray-600">Discount: -$<%= order.discount.toFixed(2) %></p>
                        <% } %>
                        <p class="text-gray-600">Shipping Fee: $<%= order.shippingFee?.toFixed(2) || '0.00' %></p>
                        <p class="text-gray-600">Tax: $<%= order.tax?.toFixed(2) || '0.00' %></p>
                        <p class="text-gray-600 font-bold">Total: $<%= order.totalAmount?.toFixed(2) || '0.00' %></p>
                    </div>

                    <% if (order.statusHistory?.length) { %>
                        <div class="section-divider"></div>
                        <div class="mb-6">
                            <h2 class="text-lg font-semibold text-gray-700 mb-2">Status History</h2>
                            <ul class="list-disc pl-5 text-gray-600">
                                <% order.statusHistory.forEach(entry => { %>
                                    <li>
                                        <%= entry.status %> - <%= new Date(entry.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                        <% if (entry.current) { %>(Current)<% } %>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <!-- Update Status -->
                    <% if (order.orderStatus !== 'Delivered' && order.orderStatus !== 'Cancelled') { %>
                        <div class="section-divider"></div>
                        <div class="mb-6">
                            <h2 class="text-lg font-semibold text-gray-700 mb-2">Update Order Status</h2>
                            <select id="statusSelect" class="border rounded p-2 text-gray-600">
                                <option value="" disabled selected>Select Status</option>
                                <option value="Processing">Processing</option>
                                <option value="Shipped">Shipped</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <button onclick="updateStatus('<%= order._id %>')"
                                class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition ml-2">
                                Update
                            </button>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-100 p-4 text-center text-gray-600 text-sm shadow-inner">
        Â© <%= new Date().getFullYear() %> Timzo Admin Panel. All rights reserved.
    </footer>

    <script>
        async function updateStatus(orderId) {
            const status = document.getElementById('statusSelect').value;
            if (!status) {
                alert('Please select a status');
                return;
            }
            try {
                const response = await fetch(`/admin/orders/update/${orderId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status })
                });
                const data = await response.json();
                if (data.success) {
                    alert('Order status updated successfully');
                    window.location.reload();
                } else {
                    alert(data.message || 'Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('An error occurred while updating status');
            }
        }
    </script>
</body>

</html>