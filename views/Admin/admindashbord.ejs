        }
        .mobile-toggle {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            color: #0f172a;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: 0 4px 20px rgba(251, 191, 36, 0.3);
            z-index: 1001;
            transition: all 0.3s ease;
        }

        .mobile-toggle:hover {
            transform: scale(1.1);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 1rem;
            }

            .mobile-toggle {
                display: flex;
            }

            .dashboard-title {
                font-size: 1.5rem;
            }

            .chart-container {
                height: 300px;
            }

            .filter-container {
                flex-direction: column;
            }

            .filter-btn {
                width: 100%;
                text-align: center;
            }
        }

        @media (max-width: 640px) {
            .main-content {
                padding: 0.75rem;
            }

            .dashboard-card {
                margin-bottom: 1rem;
            }

            .card-body {
                padding: 1rem;
            }

            .top-list li {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .item-count {
                align-self: flex-end;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <img src="/images/TIMZO.jpg" alt="Timzo Logo">
                <div class="sidebar-brand-text">Timzo Admin</div>
            </div>
        </div>

        <div class="sidebar-user">
            <div class="sidebar-user-info">
                <div class="sidebar-user-avatar">
                    <%- admin && admin.name ? admin.name.charAt(0).toUpperCase() : 'A' %>
                </div>
                <div class="sidebar-user-details">
                    <h4><%- admin && admin.name ? admin.name : 'Admin User' %></h4>
                    <p><%- admin && admin.email ? admin.email : 'admin@timzo.com' %></p>
                </div>
            </div>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-section-title">Dashboard</div>
                <a href="/admin/dashboard" class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Store Management</div>
                <a href="/admin/getProduct" class="nav-link <%= activePage === 'product' ? 'active' : '' %>">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/brand" class="nav-link <%= activePage === 'brand' ? 'active' : '' %>">
                    <i class="fas fa-tags"></i>
                    <span>Brands</span>
                </a>
                <a href="/admin/categories" class="nav-link <%= activePage === 'categories' ? 'active' : '' %>">
                    <i class="fas fa-list"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/orders" class="nav-link <%= activePage === 'orders' ? 'active' : '' %>">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/coupons" class="nav-link <%= activePage === 'coupons' ? 'active' : '' %>">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/sales-report" class="nav-link <%= activePage === 'sales-report' ? 'active' : '' %>">
                    <i class="fas fa-chart-line"></i>
                    <span>Sales Report</span>
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">User Management</div>
                <a href="/admin/users" class="nav-link <%= activePage === 'users' ? 'active' : '' %>">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
            </div>
        </nav>

        <div class="sidebar-footer">
            <a href="/admin/logout" class="logout-link">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Mobile Toggle -->
    <div class="mobile-toggle" id="mobileToggle">
        <i class="fas fa-bars" id="menuIcon"></i>
        <i class="fas fa-times" id="closeIcon" style="display: none;"></i>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Dashboard Overview</h1>
            <p class="dashboard-subtitle">Welcome to your admin dashboard</p>
        </div>

        <!-- Sales Chart -->
        <div class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Sales Overview</h2>
            </div>
            <div class="card-body">
                <div class="filter-container">
                    <button class="filter-btn active" onclick="updateChart('daily')">Daily</button>
                    <button class="filter-btn" onclick="updateChart('weekly')">Weekly</button>
                    <button class="filter-btn" onclick="updateChart('monthly')">Monthly</button>
                    <button class="filter-btn" onclick="updateChart('yearly')">Yearly</button>
                </div>
                <div class="chart-container">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Lists -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem;">
            <!-- Best Selling Products -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Top 10 Best-Selling Products</h3>
                </div>
                <div class="card-body">
                    <% if (bestSellingProducts && bestSellingProducts.length > 0) { %>
                        <ul class="top-list">
                            <% bestSellingProducts.forEach(product => { %>
                                <li>
                                    <span class="item-name"><%- product.name %></span>
                                    <span class="item-count"><%- product.totalSold %> units</span>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <div class="no-data">
                            <i class="fas fa-box-open"></i>
                            <p>No products sold yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Best Selling Categories -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Top 10 Best-Selling Categories</h3>
                </div>
                <div class="card-body">
                    <% if (bestSellingCategories && bestSellingCategories.length > 0) { %>
                        <ul class="top-list">
                            <% bestSellingCategories.forEach(category => { %>
                                <li>
                                    <span class="item-name"><%- category.name %></span>
                                    <span class="item-count"><%- category.totalSold %> units</span>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <div class="no-data">
                            <i class="fas fa-tags"></i>
                            <p>No categories sold yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Best Selling Brands -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Top 10 Best-Selling Brands</h3>
                </div>
                <div class="card-body">
                    <% if (bestSellingBrands && bestSellingBrands.length > 0) { %>
                        <ul class="top-list">
                            <% bestSellingBrands.forEach(brand => { %>
                                <li>
                                    <span class="item-name"><%- brand.name %></span>
                                    <span class="item-count"><%- brand.totalSold %> units</span>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <div class="no-data">
                            <i class="fas fa-certificate"></i>
                            <p>No brands sold yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Ledger Section -->
        <div class="dashboard-card">
            <div class="card-body ledger-section">
                <h2 class="card-title" style="margin-bottom: 1rem;">Ledger Book</h2>
                <p style="color: #64748b; margin-bottom: 2rem;">Generate a comprehensive ledger book report in PDF format</p>
                <button class="ledger-btn" onclick="generateLedger()">
                    <i class="fas fa-file-pdf" style="margin-right: 0.5rem;"></i>
                    Generate Ledger Book (PDF)
                </button>
            </div>
        </div>
    </div>

    <script>
        let salesChart;
        const chartData = <%- JSON.stringify(chartData) %>;

        function initializeChart(filter = 'daily') {
            const ctx = document.getElementById('salesChart').getContext('2d');
            const data = chartData[filter];

            if (salesChart) {
                salesChart.destroy();
            }

            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels,
                    datasets: [{
                        label: `Sales (${filter.charAt(0).toUpperCase() + filter.slice(1)})`,

                        data: data.values,
                        borderColor: '#f59e0b',
                        backgroundColor: 'rgba(245, 158, 11, 0.1)',
                        fill: true,
                        tension: 0.4,
                        borderWidth: 3,
                        pointBackgroundColor: '#f59e0b',
                        pointBorderColor: '#ffffff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            labels: {
                                font: {
                                    size: 14,
                                    weight: '500'
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Total Sales (â‚¹)',
                                font: {
                                    weight: 'bold',
                                    size: 14
                                }
                            },
                            grid: {
                                color: 'rgba(0,0,0,0.05)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: filter.charAt(0).toUpperCase() + filter.slice(1),
                                font: {
                                    weight: 'bold',
                                    size: 14
                                }
                            },
                            grid: {
                                color: 'rgba(0,0,0,0.05)'
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });

            // Update filter buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.toLowerCase() === filter) {
                    btn.classList.add('active');
                }
            });
        }

        function updateChart(filter) {
            initializeChart(filter);
        }

        async function generateLedger() {
            try {
                const response = await fetch('/admin/generate-ledger', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await response.json();
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Ledger Generated',
                        text: 'Your ledger book has been generated and will download shortly.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    const link = document.createElement('a');
                    link.href = data.pdfUrl;
                    link.download = 'ledger-book.pdf';
                    link.click();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to generate ledger book.',
                    });
                }
            } catch (error) {
                console.error('Error generating ledger:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while generating the ledger book.',
                });
            }
        }

        // Mobile sidebar functionality
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const mobileToggle = document.getElementById('mobileToggle');
        const menuIcon = document.getElementById('menuIcon');
        const closeIcon = document.getElementById('closeIcon');

        function toggleSidebar() {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
            
            if (sidebar.classList.contains('active')) {
                menuIcon.style.display = 'none';
                closeIcon.style.display = 'block';
            } else {
                menuIcon.style.display = 'block';
                closeIcon.style.display = 'none';
            }
        }

        mobileToggle.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', toggleSidebar);

        // Initialize chart on page load
        window.addEventListener('load', () => {
            initializeChart('daily');
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (salesChart) {
                salesChart.resize();
            }
            
            // Close sidebar on desktop
            if (window.innerWidth >= 1024) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                menuIcon.style.display = 'block';
                closeIcon.style.display = 'none';
            }
        });
    </script>
</body>
</html>