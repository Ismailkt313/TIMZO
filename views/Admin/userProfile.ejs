<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile - Timzo Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 pt-20">

  <!-- Navbar -->
  <%- include('.././Partials/admin/navbar') %>

  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-dark text-white">
      <%- include('.././Partials/admin/adminsidebar', { activePage: 'users' }) %>
    </div>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <div class="bg-white p-6 rounded-xl shadow-md max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">User Profile</h2>

        <div class="flex flex-col md:flex-row items-center gap-8">
          <!-- Profile Photo -->
          <div class="flex-shrink-0">
            <img src="https://via.placeholder.com/150" alt="User Profile" class="rounded-full w-40 h-40 object-cover shadow-md">
          </div>

          <!-- User Info -->
          <div class="flex-1 w-full">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

              <div>
                <h5 class="font-semibold text-gray-700">Name</h5>
                <p class="text-gray-600"><%= user.name %></p>
              </div>

              <div>
                <h5 class="font-semibold text-gray-700">Email</h5>
                <p class="text-gray-600"><%= user.email %></p>
              </div>

              <div>
                <h5 class="font-semibold text-gray-700">Phone Number</h5>
                <p class="text-gray-600"><%= user.phone %></p>
              </div>

              <div>
                <h5 class="font-semibold text-gray-700">User ID</h5>
                <p class="text-gray-600"><%= user._id %></p>
              </div>

              <div class="md:col-span-2">
                <h5 class="font-semibold text-gray-700">Address</h5>
                <p class="text-gray-600"><%= user.address %></p>
              </div>

            </div>

            <!-- Buttons -->
            <div class="flex gap-4 mt-8">
              <a href="/admin/update-user/<%= user._id %>" class="btn btn-primary flex-1">Update Profile</a>

              <% if (user.isBlocked) { %>
                <a href="/admin/unblock-user/<%= user._id %>" class="btn btn-success flex-1">Unblock User</a>
              <% } else { %>
                <a href="/admin/block-user/<%= user._id %>" class="btn btn-danger flex-1">Block User</a>
              <% } %>
            </div>

          </div>
        </div>

      </div>
    </main>
  </div>

  <!-- Footer -->
  <%- include('.././Partials/admin/footer') %>

</body>
</html>
